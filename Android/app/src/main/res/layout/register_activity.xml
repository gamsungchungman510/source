<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgradient"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/regfont1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="30dp"/>

        <EditText
            android:elevation="5dp"
            android:background="@drawable/loginform"
            android:paddingHorizontal="15dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:id="@+id/regid"
            android:ems="10"
            android:privateImeOptions="defaultInputmode=english"

            android:hint="ID"
            android:layout_marginBottom="10dp"
            />


        <EditText
            android:elevation="5dp"
            android:background="@drawable/loginform"
            android:paddingHorizontal="15dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:id="@+id/regpw"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="PASSWORD"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/regfont2"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:text="관심 분야를 선택하세요"
            android:layout_marginBottom="10dp"/>
        <Spinner
            android:id="@+id/regmenu1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#ffffff"
            android:entries="@array/category"
            android:spinnerMode="dialog"
            android:layout_marginBottom="10dp" />


        <Spinner
            android:id="@+id/regmenu2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:backgroundTint="#ffffff"
            android:entries="@array/category"
            android:overlapAnchor="false"
            android:spinnerMode="dialog"
            android:layout_marginBottom="10dp" />

        <Spinner
            android:id="@+id/regmenu3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:backgroundTint="#ffffff"
            android:entries="@array/category"
            android:overlapAnchor="false"
            android:spinnerMode="dialog"
            android:layout_marginBottom="20dp" />


        <ImageView
            android:id="@+id/regsubmit"
            android:elevation="5dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_design"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_check_purple_24dp"
            android:layout_marginBottom="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </LinearLayout>





</RelativeLayout>