<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="15dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/partcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp">


        <RelativeLayout
            android:id="@+id/rmake"

            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            g34<EditText
                android:id="@+id/makenum"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/makename"
                android:gravity="left|center"
                android:hint="문항 이름"
                android:textSize="20sp"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/makename"
                android:layout_width="70dp"
                android:layout_height="45dp"
                android:gravity="left|center"
                android:textSize="20sp"
                android:text="1번 : "
                tools:ignore="RtlHardcoded" />

            <EditText
                android:id="@+id/firstselct"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/makenum"
                android:hint="1번 선택"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/secondselct"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/firstselct"
                android:layout_marginTop="15dp"
                android:hint="2번 선택"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/thirdselct"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/secondselct"
                android:layout_marginTop="12dp"
                android:hint="3번 선택"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fourthselct"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/thirdselct"
                android:layout_marginTop="11dp"
                android:hint="4번 선택"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>
